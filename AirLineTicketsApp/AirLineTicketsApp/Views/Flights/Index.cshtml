@model IEnumerable<AirLineTicketsApp.Entities.Flight>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Takeoff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Landing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plane)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountProcent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Takeoff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Landing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plane.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountProcent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
